{
  "name": "streamz",
  "version": "1.0.0",
  "dependencies": {
    "firebase": "^2.3.2",
    "jquery": "^2.1.4",
    "jquery-ui": "^1.10.5",
    "knockout": "^3.4.0"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "watchify": "^3.7.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "build": "browserify src/main.js | uglifyjs -mc > dist/bundle.js",
    "watch": "watchify src/main.js -o dist/bundle.js --debug --verbose",
    "build-admin": "browserify src/admin.js | uglifyjs -mc > dist/admin.js",
    "watch-admin": "watchify src/admin.js -o dist/admin.js --debug --verbose"
  }
}
